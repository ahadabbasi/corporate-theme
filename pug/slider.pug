#carouselExampleIndicators.carousel.slide.carousel-fade.mb-5(data-ride="carousel")
    ol.carousel-indicators
        - for (var x = 0; x < 3; x++)
            li(data-target="#carouselExampleIndicators", data-slide-to=`${x}`, class=(x == 0 ? "active" : ""))

    .carousel-inner
        - var list = ["First", "Second", "Third"]
        each item in list
            div(class=(item === 'First' ? "carousel-item active" : "carousel-item"))
                svg.bd-placeholder-img.bd-placeholder-img-lg.d-block.w-100.h-100(width="800", xmlns="http://www.w3.org/2000/svg", preserveAspectRatio="xMidYMid slice", focusable="false", role="img", aria-label=`Placeholder: ${item} slide`)
                    title Placeholder
                    rect(width="100%", height="100%", fill="#666")
                    text(x="50%", y="50%", fill="#444", dy=".3em") #{item} slide
                    
    
    a(class="carousel-control-prev", href="#carouselExampleIndicators", role="button", data-slide="prev")
        span(class="carousel-control-prev-icon", aria-hidden="true")
        span.sr-only Previous
    a(class="carousel-control-next", href="#carouselExampleIndicators", role="button", data-slide="next")
        span(class="carousel-control-next-icon" aria-hidden="true")
        span.sr-only Next